    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    background: #fff;
    border: 3px solid #333;
    border-radius: 50%;
  }

  p {
    margin-top: 20px;
    color: white;
    font-weight: bold;
    font-size: 16px;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
